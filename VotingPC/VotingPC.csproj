<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Assets\vpc-icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Emblem_of_Vietnam.png" />
    <None Remove="template.db" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\vpc-icon.ico" />
    <Content Include="template.db">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignThemes" Version="4.1.0" />
    <PackageReference Include="ShowMeTheXAML.MSBuild" Version="2.0.0" />
    <PackageReference Include="sqlite-net-sqlcipher" Version="1.7.335" />
    <PackageReference Include="System.IO.Ports" Version="5.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Emblem_of_Vietnam.png" />
    <Resource Include="Assets\Quicksand-Bold.ttf" />
    <Resource Include="Assets\Quicksand-Medium.ttf" />
    <Resource Include="Assets\Quicksand-Light.ttf" />
    <Resource Include="Assets\Quicksand-Regular.ttf" />
    <Resource Include="Assets\Quicksand-SemiBold.ttf" />
  </ItemGroup>

</Project>