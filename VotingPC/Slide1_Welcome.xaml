<UserControl x:Class="VotingPC.Slide1_Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VotingPC"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">
    <UserControl.Resources>
        <local:AddValue x:Key="AddValue"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Margin="36" Height="140" Width="140" Grid.RowSpan="2" 
                Source="Assets/Emblem_of_Vietnam.png"
               VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <DockPanel  Grid.Row="0" HorizontalAlignment="Center">
            
            <StackPanel Margin="0 36 0 18" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock x:Name="textBlock" Text="CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM"
                       HorizontalAlignment="Center"
                       FontWeight="Bold" FontSize="40"/>
                    <Line Stroke="Black" StrokeThickness="3" Margin="0 10"
                  X1="0" X2="{Binding ActualWidth, ElementName=textBlock, Mode=OneWay}"/>
                    <TextBlock Text="Độc lập - Tự do - Hạnh phúc" FontSize="36"
                       HorizontalAlignment="Center"/>
                </StackPanel>
        </DockPanel>

        <TextBlock Text="Vui lòng chạm ngón tay đã đăng ký lên máy quét vân tay" Grid.Row="1"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200 0"
                   FontSize="60" TextWrapping="Wrap" TextAlignment="Center"/>
    </Grid>
</UserControl>
