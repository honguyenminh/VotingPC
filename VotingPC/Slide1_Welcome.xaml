<UserControl x:Class="VotingPC.Slide1_Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VotingPC"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <TextBlock Text="Vui lòng chạm ngón tay đã đăng ký lên máy quét vân tay"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200 0"
                   FontSize="60" TextWrapping="Wrap" TextAlignment="Center"/>

        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Image Margin="0 0 40 0" Height="100" Width="100"
                Source="Assets/Emblem_of_Vietnam.png" Stretch="Uniform"/>
            <TextBlock Text="Bầu cử kẻ thống trị thế giới" 
                       FontSize="40" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
