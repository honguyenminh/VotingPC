<UserControl x:Class="VotingPC.Slide1_Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VotingPC"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">
    <UserControl.Resources>
        <local:AddValue x:Key="AddValue"/>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0 36 0 0"
                    VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM"
                       HorizontalAlignment="Center"
                       FontWeight="Bold" FontSize="40"/>
            <Line Stroke="Black" StrokeThickness="3" Margin="0 10"
                  X1="0" X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"/>
            <TextBlock Text="Độc lập - Tự do - Hạnh phúc" FontSize="36"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        <TextBlock Text="Vui lòng chạm ngón tay đã đăng ký lên máy quét vân tay"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200 0"
                   FontSize="60" TextWrapping="Wrap" TextAlignment="Center"/>

        <Image Margin="0 0 0 36" Height="140" Width="140" VerticalAlignment="Bottom"
                Source="Assets/Emblem_of_Vietnam.png" Stretch="Uniform"/>
    </Grid>
</UserControl>
