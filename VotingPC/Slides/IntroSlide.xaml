<UserControl x:Class="VotingPC.Slides.IntroSlide" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" FocusVisualStyle="{x:Null}"
    d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image x:Name="image" x:FieldModifier="private"
            Height="140" Width="140" Margin="36 28" 
            VerticalAlignment="Center" HorizontalAlignment="Left" />
        <StackPanel Grid.Row="0" Margin="0 36" Orientation="Vertical"
            HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock d:Text="CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM" 
                HorizontalAlignment="Center" Margin="0 0 0 8"
                x:FieldModifier="private" x:Name="topHeader"
                FontWeight="Bold" FontSize="40" />
            <Line Stroke="Black" StrokeThickness="3" Margin="0 10" 
                HorizontalAlignment="Center" X1="0" X2="300" />
            <TextBlock d:Text="Độc lập - Tự do - Hạnh phúc" FontSize="36" 
                HorizontalAlignment="Center" FontWeight="Normal" 
                x:FieldModifier="private" x:Name="topSubheader" />
        </StackPanel>

        <TextBlock Text="Vui lòng chạm ngón tay đã đăng ký lên máy quét vân tay" 
            HorizontalAlignment="Center" VerticalAlignment="Center" 
            Margin="200 0" FontSize="60" TextWrapping="Wrap" TextAlignment="Center"
            Grid.Row="1" x:FieldModifier="private" x:Name="title" FontWeight="Medium" />
    </Grid>
</UserControl>